<%= form_with(model: calllist, local: true) do |form| %>
  <% if calllist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(calllist.errors.count, "error") %> prohibited this calllist from being saved:</h2>

      <ul>
      <% calllist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend><strong>CSR Details</strong></legend>
    <p>
      <table class="field">
        <thead>
          <tr>
            <th> <%= form.label :day, "Day" %> </th>
            <th> <%= form.label :csr, "CSR" %> </th>
            <th> <%= form.label :rep, "Rep" %> </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> <%= form.select :day, @day, {}, {:value => params[:day]} %> </td>
            <td> <%= form.text_field :csr, id: :calllist_csr %> </td>
            <td> <%= form.text_field :rep, id: :calllist_rep %> </td>
          </tr>
        </tbody>
      </table>
    </p>
  </fieldset>

  <fieldset>
    <legend><strong>Customer Details</strong></legend>
    <p>
      <table class="field">
        <thead>
          <tr>
            <th> <%= form.label :custcode, "Customer code" %> </th>
            <th> <%= form.label :shipto, "Ship to" %> </th>
            <th> <%= form.label :dept, "Dept." %> </th>
            <th> <%= form.label :item, "Item" %> </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> <%= form.text_field :custcode, id: :calllist_custcode %> </td>
            <td> <%= form.text_field :shipto, id: :calllist_shipto %> </td>
            <td> <%= form.text_field :dept, id: :calllist_dept %> </td>
            <td> <%= form.text_field :item, id: :calllist_item %> </td>
          </tr>
        </tbody>
      </table>
    </p>
    <p>
      <table class="field">
        <thead>
          <tr>
            <th> <%= form.label :phone, "Phone" %> </th>
            <th> <%= form.label :manager, "Manager" %> </th>
            <th> <%= form.label :totalitems, "Total items" %> </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td> <%= form.text_field :phone, id: :calllist_phone %> </td>
            <td> <%= form.text_field :manager, id: :calllist_manager %> </td>
            <td> <%= form.text_field :totalitems, id: :calllist_totalitems %> </td>
          </tr>
        </tbody>
      </table>
    </p>
  </fieldset>
  <p>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
