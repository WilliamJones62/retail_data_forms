<p id="notice"><%= notice %></p>

<h2>Customer Call List</h2>

<%= form_with url: calllists_customerselected_path, local: true, method: 'get' do |f| %>
  <%= f.label(:called_customer, 'Customer:') %>
  <%= f.select(:called_customer, options_for_select(@customer, @selected_customer)) %>
  <%= f.submit "Change" %>
<% end %>

<br>

<div id="listtable">
  <div id="listdiv">
    <table id="listtab" class="stripe" class="mytable" class="display" cellspacing="0" >
      <thead>
        <tr>
          <th> Customer </th>
          <th> Ship to </th>
          <th> Dept </th>
          <th> Phone </th>
          <th> Call day </th>
          <th> Manager </th>
          <th> Notes </th>
          <th> Instructions </th>
          <th> CSR </th>
          <th> Called? </th>
          <th> Ordered? </th>
          <th> Edit </th>
        </tr>
      </thead>
      <tbody>
        <% if @customer_calllists %>
          <% @customer_calllists.each do |calllist| %>
            <tr>
              <td><%= calllist.custcode %></td>
              <td><%= calllist.shipto %></td>
              <td><%= calllist.dept %></td>
              <td><%= calllist.phone %></td>
              <td><%= calllist.calllists_day %></td>
              <td><%= calllist.manager %></td>
              <td> <%= calllist.notes %> </td>
              <td> <%= calllist.instructions %> </td>
              <td> <%= calllist.csr %> </td>
              <td> <%= human_boolean(calllist.called) %> </td>
              <td> <%= human_boolean(calllist.ordered) %></td>
              <td> <%= link_to 'Edit', edit_calllist_path(calllist) %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
