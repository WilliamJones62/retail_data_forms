<p id="notice"><%= notice %></p>

<h2>Today's Call List</h2>

<%= form_with url: calllists_selected_path, local: true, method: 'get' do |f| %>
  <%= f.label(:called_csr, 'CSR:') %>
  <%= f.select(:called_csr, options_for_select(@csr, @selected_csr)) %>
  <%= f.label(:called_day, 'Day:') %>
  <%= f.select(:called_day, options_for_select(@day, @selected_day)) %>
  <%= f.submit "Change" %>
<% end %>

<br>

<div id="listtable">
  <div id="listdiv">
    <table id="listtab" class="stripe" class="mytable" class="display" cellspacing="0" >
      <thead>
        <tr>
          <th> Called? </th>
          <th> Customer </th>
          <th> Ship to </th>
          <th> Dept </th>
          <th> Phone </th>
          <th> Manager </th>
          <th> Notes </th>
          <th> CSR </th>
          <th> Ordered? </th>
          <th> Edit </th>
        </tr>
      </thead>
      <tbody>
        <% @calllists.each do |calllist| %>
          <tr>
            <td> <%= human_boolean(calllist.called) %> </td>
            <td><%= calllist.custcode %></td>
            <td><%= calllist.shipto %></td>
            <td><%= calllist.dept %></td>
            <td><%= calllist.phone %></td>
            <td><%= calllist.manager %></td>
            <td> <%= calllist.notes %> </td>
            <td> <%= calllist.csr %> </td>
            <td> <%= human_boolean(calllist.ordered) %></td>
            <td> <%= link_to 'Edit', edit_calllist_path(calllist) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
